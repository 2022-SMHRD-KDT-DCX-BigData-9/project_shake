<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.shake.mapper.MyRecipeMapper">

<select id="recipeList" resultType="com.smhrd.shake.entity.RecipeInfo">
	select * from recipe_info
</select>

<insert id="recipeWrite" parameterType="com.smhrd.shake.entity.RecipeInfo">
	insert into community_info (user_id, rcp_name, rcp_ingredient, rcp_image, rcp_desc, created_at, comm_views, comm_likes) 
	values (#{user_id}, #{rcp_name}, #{rcp_ingredient}, #{rcp_image}, #{rcp_desc}, now(), 1, 2)
</insert>

<select id="recipeContent" parameterType="com.smhrd.shake.entity.RecipeInfo">
	select * from recipe_info where rcp_idx = #{rcp_idx}
</select>


</mapper>